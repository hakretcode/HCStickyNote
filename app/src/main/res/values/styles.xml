<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoteParamStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="FormButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="cornerRadius">1000dp</item>
        <item name="iconSize">30dp</item>
        <item name="iconGravity">top</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="iconTint">?colorSecondary</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="NoteContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoteContent.Title">
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NoteContent.Body">
        <item name="android:maxLines">7</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>